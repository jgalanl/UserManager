<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:stateListAnimator="@null"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jesusgalan.usermanager.PantallaPrincipal">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="@string/bienvenido_a_user_manager"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="@string/qu_quieres_hacer"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp" />

    <Button
        android:id="@+id/boton_pantalla_listar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="64dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="@android:color/background_light"
        android:elegantTextHeight="false"
        android:text="@string/listar_usuarios" />

    <Button
        android:id="@+id/boton_pantalla_insertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/boton_pantalla_listar"
        android:layout_alignBottom="@+id/boton_pantalla_listar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:text="@string/insertar_nuevos_usuarios" />

</RelativeLayout>